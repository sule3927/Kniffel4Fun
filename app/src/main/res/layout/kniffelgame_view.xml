<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMiddleYellow"
    tools:context=".ScoreGame">


    <LinearLayout
        android:id="@+id/layoutKniffelGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iviewAvatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.5"
                android:contentDescription="@string/strViewAstronaut"
                android:src="@drawable/astronaut" />

            <TextView
                android:id="@+id/txtPlayer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnDice1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnDice1"
                android:src="@drawable/dice1" />

            <TextView
                android:id="@+id/txtDice1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtDice1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtDice1"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnDice2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnDice2"
                android:src="@drawable/dice2" />

            <TextView
                android:id="@+id/txtDice2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtDice2"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtDice2"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnDice3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnDice3"
                android:src="@drawable/dice3" />

            <TextView
                android:id="@+id/txtDice3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtDice3"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtDice3"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnDice4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnDice4"
                android:src="@drawable/dice4" />

            <TextView
                android:id="@+id/txtDice4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtDice4"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtDice4"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnDice5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnDice5"
                android:src="@drawable/dice5" />

            <TextView
                android:id="@+id/txtDice5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtDice5"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtDice5"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnDice6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnDice6"
                android:src="@drawable/dice6" />

            <TextView
                android:id="@+id/txtDice6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtDice6"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtDice6"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn3er"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtn3er"
                android:text="@string/strBtn3er"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt3er"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxt3er"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxt3er"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn4er"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtn4er"
                android:text="@string/strBtn4er"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt4er"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxt4er"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxt4er"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnHouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnHouse"
                android:src="@drawable/house" />

            <TextView
                android:id="@+id/txtHouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtHouse"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtHouse"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnSmallStreet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnSmallStreet"
                android:src="@drawable/small_street" />

            <TextView
                android:id="@+id/txtSmallStreet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtSmallStreet"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtSmallStreet"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnLargeStreet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strLargeStreet"
                android:src="@drawable/large_street" />

            <TextView
                android:id="@+id/txtLargeStreet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtLargeStreet"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtLargeStreet"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnChance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strBtnChance"
                android:src="@drawable/question" />

            <TextView
                android:id="@+id/txtChance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strTxtChance"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/strTxtChance"
                android:textAlignment="center"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnKniffel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strBtnKniffel"
                android:text="@string/strBtnKniffel"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iviewDice1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strViewDice1"
                android:src="@drawable/question" />

            <ImageView
                android:id="@+id/iviewDice2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strViewDice2"
                android:src="@drawable/question" />

            <ImageView
                android:id="@+id/iviewDice3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strViewDice3"
                android:src="@drawable/question" />

            <ImageView
                android:id="@+id/iviewDice4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strViewDice4"
                android:src="@drawable/question" />

            <ImageView
                android:id="@+id/iviewDice5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBrightYellow"
                android:contentDescription="@string/strViewDice5"
                android:src="@drawable/question" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnRollDice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strBtnRollDice"
                android:text="@string/strBtnRollDice"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:contentDescription="@string/strBtnBack"
                android:src="@drawable/left_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtCountDiceRoll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/colorMiddleYellow"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMiddleYellow"
                android:text="@string/strTxtNxtPlayer"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>